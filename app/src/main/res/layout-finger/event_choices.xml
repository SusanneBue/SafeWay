<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:columnCount="1"
    android:background="@android:color/background_light"
    android:layout_height="400dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageButton
                android:layout_height="97dp"
                app:srcCompat="@drawable/caution"
                android:id="@+id/imageButtonCaution"
                android:layout_width="wrap_content"
                android:scaleType="fitCenter"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:background="@android:color/background_light"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="mapEvent"
                android:contentDescription="" />

            <ImageButton
                android:layout_height="97dp"
                app:srcCompat="@drawable/safety"
                android:id="@+id/imageButtonSafety"
                android:scaleType="fitCenter"
                android:onClick="mapEvent"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@android:color/background_light"
                android:contentDescription="SecurityPoint"/>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ImageButton
            android:layout_height="match_parent"
            app:srcCompat="@drawable/person"
            android:id="@+id/imageButtonPerson"
            android:layout_width="131dp"
            android:scaleType="fitCenter"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:background="@android:color/background_light"
            android:layout_gravity="center_vertical|center_horizontal"
            android:onClick="mapEvent"
            android:contentDescription="Missing Lights" />

        <ImageButton
            android:layout_height="97dp"
            app:srcCompat="@drawable/hotel"
            android:id="@+id/imageButtonHotel"
            android:scaleType="fitCenter"
            android:onClick="mapEvent"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@android:color/background_light"
            android:contentDescription="SecurityPoint"/>

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:baselineAligned="false"

        android:orientation="horizontal">


        <ImageButton
            android:layout_height="98dp"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/gas_station"
            android:id="@+id/imageButtonGasStation"
            android:onClick="mapEvent"
            android:background="@android:color/background_light"
            android:layout_gravity="center_vertical|center_horizontal"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_height="97dp"
            app:srcCompat="@drawable/streetlights"
            android:id="@+id/imageButtonLights"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:background="@android:color/background_light"
            android:layout_gravity="center_vertical|center_horizontal"
            android:onClick="mapEvent"
            android:contentDescription="Missing Lights" />

    </LinearLayout>

</GridLayout>